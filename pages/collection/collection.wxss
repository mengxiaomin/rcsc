/* pages/collection/collection.wxss */

.nav {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #fff;
  border-top: 2rpx solid #efeff4;
}

.nav-list {
  width: 50%;
  color: #666;
  border-bottom: 2rpx solid #fff;
}

.nav-active {
  color: #14ddd6;
  border-bottom: 2rpx solid #14ddd6;
}

.reset-block {
  margin: 20rpx 24rpx 0;
  border-radius: 8rpx;
  overflow: hidden;
  box-shadow: 2rpx 2rpx 20rpx 2rpx rgba(0, 0, 0, 0.1);
  line-height: 2;
}

.position {
  font-weight: bold;
}

.wage {
  color: #14ddd6;
  font-weight: bold;
}

.keywords {
  background: #efeff4;
  margin-right: 24rpx;
  padding: 0 20rpx;
  height: 42rpx;
  line-height: 42rpx;
  box-sizing: border-box;
  margin-top: 16rpx;
  border-radius: 8rpx;
}

.wraper {
  height: 100vh;
}

.container {
  overflow: auto;
  -webkit-overflow-scrolling: touch;
  position: relative;
}

.none {
  width: 172rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.logo {
  width: 60rpx;
  height: 60rpx;
  margin-right: 24rpx;
  border-radius: 50%;
  overflow: hidden;
}

.line {
  line-height: 1;
}
