.input-box {
  background: #fff;
  border-radius: 50rpx;
  margin-right: 24rpx;
  padding: 0 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  overflow: hidden;
}

.input-box input {
  background: #fff;
  width: 100%;
}

.nav {
  width: 100%;
  background: #fff;
  border-bottom: 2rpx solid #efeff4;
}

.navList {
  height: 80rpx;
  width: 33.33%;
}

.navList .iconfont {
  margin-left: 6rpx;
  font-size: 24rpx;
  line-height: 1;
  color: #ccc;
}

.navList-actived {
  color: #14ddd6;
}

.navList-actived .iconfont {
  color: #14ddd6;
}

.reset-block {

  margin: 20rpx 24rpx 0;
  border-radius: 8rpx;
  overflow: hidden;
  box-shadow: 2rpx 2rpx 20rpx 2rpx rgba(0, 0, 0, 0.1);
  line-height: 2;
}

.reset-block:first-child {
  margin: 0 24rpx;
}

.height {
  min-height: 900rpx;
}

.position {
  font-weight: bold;
}

.wage {
  color: #14ddd6;
  font-weight: bold;
}

.keywords {
  background: #efeff4;
  margin-right: 24rpx;
  padding: 0 20rpx;
  height: 42rpx;
  line-height: 42rpx;
  box-sizing: border-box;
  margin-top: 16rpx;
  border-radius: 8rpx;
}

.wraper {
  height: 100vh;
  overflow: hidden;
}

.container {

  overflow: auto;
  -webkit-overflow-scrolling: touch;
  /* position: relative; */
  padding-top: 20rpx;
  height: 100%;
  /* width: 700rpx; */
}

.full-width {
  width: 100%;
}

.pop-box {
  position: fixed;
  background: rgba(0, 0, 0, 0.2);
  width: 100%;
  height: 100%;
  z-index: 2;
  left: 0;
  top: 0;
}

.pop-requirements {
  width: 100%;
  height: 726rpx;
  background: #fff;
  animation-fill-mode: forwards;
}

.pop-btn {
  height: 88rpx;
  border-top: 2rpx solid #efeff4;
}

.pop-btn .left, .right {
  width: 50%;
  height: 88rpx;
  line-height: 88rpx;
}

.pop-btn .right {
  background: #14ddd6;
}

.pop-main {
  overflow: auto;
  -webkit-overflow-scrolling: touch;
  padding: 20rpx 24rpx;
  box-sizing: border-box;
}

.classif-title {
  padding: 10rpx 0 20rpx;
}

.classif {
  background: #efeff4;
  margin-right: 20rpx;
  line-height: 42rpx;
  height: 42rpx;
  padding: 0 20rpx;
  border-radius: 22rpx;
  margin-bottom: 20rpx;
}

.classif-active {
  background: #14ddd6;
  color: #fff;
}

.switch {
  width: 100%;
  height: 88rpx;
  border-top: 2rpx solid #efeff4;
}

.pop-btn .reset-right {
  border-left: 2rpx solid #efeff4;
  background: #fff;
}

.switch .iconfont {
  margin-right: 10rpx;
}

.pop-city {
  background: #efeff4;
  overflow: hidden;
  position: relative;
}

.area {
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  width: 300rpx;
  background: #fff;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
}

.area-list {
  width: 100%;
  height: 85rpx;
  line-height: 85rpx;
  color: #666;
}

.area-actived {
  background: #efeff4;
  color: #14ddd6;
}

.street {
  position: absolute;
  top: 0;
  left: 300rpx;
  height: 100%;
  width: 450rpx;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
}

.street-list {
  position: relative;
  height: 85rpx;
  line-height: 85rpx;
  color: #666;
}

.street-list .iconfont {
  color: #ccc;
  position: absolute;
  right: 20rpx;
  top: 0;
}

.street-active {
  color: #14ddd6;
}

.street-list .icon-xuanze {
  color: #14ddd6;
}

.none {
  width: 172rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

@keyframes slidedown {
  from {
    height: 0;
  }

  to {
    height: 726rpx;
  }
}

.open {
  animation: slidedown 1s;
}
